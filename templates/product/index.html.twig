{% block content %}

	<div class="class-row">
		<div class="col-md-3">
			<h3>filtrer</h3>
			{{ form(form)}}
		</div>
		<div class="col-md-9">
			<h3>Nos Produit</h3>
			<div class="row product-contener">
				{% for product in products %}
					<div class="col-md-4">
