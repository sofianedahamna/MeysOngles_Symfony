{% extends 'base.html.twig' %}

{% block title %}Mes adresses - Mey's Ongles
{% endblock %}

{% block content %}
	<a href=" {{ path('app_account_address_add')}} " class="btn btn-info btn-sm float-right">Ajouter une adresses</a>
	<h1>Mes adresses</h1>
	Bienvenue
	{{ app.user.firstname }}
	dans votre compte.
	<br>
	C'est dans cet espace que vous allez pouvoir gerer toutes vos adresses
	<a href=" {{ path ('app_account') }} ">Retour</a>
	<hr>
	{% if app.user.addresses | length == 0 %}
		<p class="text-center">
			Vous n'avez pas encore ajouter d'adresses dans votre compte client. Pour en ajouter une veuiller
			<a href="">cliquer ici</a>
		</p>
	{% else %}

		<div class="row">
			{% for address in app.user.addresses %}
				<div class="col-md-4 mt-2">
					<div class="card" style="width: 18rem;">

						<div class="card-body">
							<h5 class="card-title">{{ address.name}}</h5>
							<p class="card-text">
                            
                            {{ address.address}}, <br>
                            {{ address.postal}}-{{ address.city}}-{{address.country}}
                          

                            </p>
							<a href="{{ path ('app_account_address_edit', {'id' : address.id})}}" >Modifier</a> | <a href="{{ path ('app_account_address_delete', {'id' : address.id})}}" >Supprimer</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>


	{% endif %}


{% endblock %}

